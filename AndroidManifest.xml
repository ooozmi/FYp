<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mobile.chashma"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.front" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.mobile.chashma.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.mobile.chashma.Ui"
            android:label="@string/title_activity_ui"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.mobile.chashma.Splashscreen"
            android:label="@string/title_activity_splashscreen"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.mobile.chashma.Welcome"
            android:label="@string/title_activity_welcome"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.mobile.chashma.Eyesight"
            android:label="@string/title_activity_eyesight" >
        </activity>
        <activity
            android:name="com.mobile.chashma.Colorblind"
            android:label="@string/title_activity_colorblind"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
        </activity>
        <activity
            android:name="com.mobile.chashma.Aboutus"
            android:label="@string/title_activity_aboutus" >
        </activity>
        <activity
            android:name="com.mobile.chashma.Ocr"
            android:label="@string/title_activity_ocr" 
                   android:theme="@android:style/Theme.NoTitleBar.Fullscreen" 
            >
        </activity>
    </application>

</manifest>